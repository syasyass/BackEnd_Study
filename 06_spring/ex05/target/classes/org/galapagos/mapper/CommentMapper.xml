<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.galapagos.mapper.CommentMapper">

	<select id="readAll" resultType="CommentVO">
		select * from tbl_comment
		where bno= #{bno}
	</select>
	
	<select id="get" resultType="CommentVO">
		select * from tbl_comment
		where no = #{no}
	</select>
	
	<insert id="create">
		insert into tbl_comment (bno, writer, content)
		values(#{bno}, #{writer}, #{content})
		<selectKey resultType="Long" keyProperty="no"
			keyColumn="no" order="AFTER"> <!-- insert 문 안의 selectKey의 역할 중요 -->
			SELECT LAST_INSERT_ID()
		</selectKey>	
	</insert>

	<update id="update">
		update tbl_comment
		set
			content = #{content},
			update_date = now()
		where no = #{no} order by #{bno} desc
	</update>
	
	<delete id = "delete">
		delete from tbl_comment
		where no = #{no}
	</delete>

</mapper>